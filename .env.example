# Database Configuration
DB_NAME=geopoints
DB_USER=geopoints_user
DB_PASSWORD=your_strong_password_here
DB_HOST=localhost
DB_PORT=5432

# Use PostGIS for spatial queries (set to 1 to enable, 0 for SQLite fallback)
USE_POSTGIS=1

# Windows: OSGeo4W paths for GDAL/GEOS (adjust to your installation)
# Example: C:\OSGeo4W or C:\Users\YourName\AppData\Local\Programs\OSGeo4W
OSGEO4W_ROOT=C:\OSGeo4W
GDAL_LIBRARY_PATH=${OSGEO4W_ROOT}\bin\gdal312.dll
GEOS_LIBRARY_PATH=${OSGEO4W_ROOT}\bin\geos_c.dll
PROJ_LIB=${OSGEO4W_ROOT}\share\proj
GDAL_DATA=${OSGEO4W_ROOT}\share\gdal

# Linux/Mac: Usually detected automatically, uncomment if needed
# GDAL_LIBRARY_PATH=/usr/lib/libgdal.so
# GEOS_LIBRARY_PATH=/usr/lib/libgeos_c.so
